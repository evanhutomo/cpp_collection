{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CMake Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/kotobakoe",
            "args": ["--width", "1000"],
            "stopAtEntry": false,
            "externalConsole": false,
            // "preLaunchTask": "build",
            "cwd": "${workspaceFolder}/build/",
            "environment": [],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Replace with the path to your GDB executable if necessary10
            "linux": {
                "program": "${workspaceFolder}/build/kotobakoe"
            }            
        }        
    ]
}