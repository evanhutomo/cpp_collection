{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug my_app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/my_app",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "gdb",
            "sourceFileMap": {
                "/path/to/library/source": "${workspaceFolder}/path/to/library/source"
            }
        }
    ]
}
